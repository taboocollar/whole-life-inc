            "filters": ["nocturne_voice", "glitch_aesthetic", "metaphor_weaving"],
            "next": "quality_check"
          },
          "quality_check": {
            "type": "evaluation",
            "criteria": ["coherence", "appropriateness", "persona_alignment", "safety"],
            "branches": {
              "pass": "deliver_response",
              "fail": "generate_base_response"
            }
          }
        }
